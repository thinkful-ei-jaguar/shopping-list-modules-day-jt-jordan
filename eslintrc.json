{
  "env": {
      "browser": true,
      "es6": true,
      "node": true,
      "mocha": true,
      "mongo": true
  },
// add this line to disable eslint's complaints about jQuery
  "globals": {
    "$": true
  },
  
  "extends": "eslint:recommended",
  "parserOptions": {
      // add "module" to allow es6 modules
      "sourceType": "module"
  },
  "rules": {
      "strict": ["error", "safe"],
      "eqeqeq":"error",
      "no-console": "warn",
      "no-unused-vars": "warn",
      "no-eval": "error",
      "indent": ["error", 2],      
      "quotes": ["error", "single"],
      "semi": ["error", "always"]
  }
}